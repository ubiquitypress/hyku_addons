<% view_condition = [can?(:edit, file_set.id), can?(:destroy, file_set.id), can?(:download, file_set.id), (Flipflop.enabled?(:annotation) && file_set.pdf?)] %>
<% if can?(:edit, file_set.id) || (view_condition.any? && !view_condition.one?)  %>
  <%= render partial: 'hyrax/file_sets/actions_list', locals: {file_set: file_set} %>
<% elsif view_condition.one? %>
  <%= render partial: 'hyrax/file_sets/actions_button', locals: {file_set: file_set} %>
<% end %>
